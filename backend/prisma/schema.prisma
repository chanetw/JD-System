/// Master Template ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Approval Flow
/// ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÄ‡∏î‡∏µ‡∏¢‡∏ß Apply ‡πÑ‡∏î‡πâ‡∏´‡∏•‡∏≤‡∏¢ Project
model ApprovalFlowTemplate {
  id              Int      @id @default(autoincrement())
  tenantId        Int      @map("tenant_id")
  name            String   @db.VarChar(200)
  description     String?  @db.Text
  totalLevels     Int      @default(1) @map("total_levels") // 0 = Skip Approval
  autoAssignType  String   @default("manual") @map("auto_assign_type") @db.VarChar(50)
  autoAssignUserId Int?    @map("auto_assign_user_id")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  autoAssignUser  User?    @relation("TemplateAutoAssign", fields: [autoAssignUserId], references: [id], onDelete: SetNull)
  steps           ApprovalFlowStep[]
  assignments     ProjectFlowAssignment[]

  @@index([tenantId])
  @@map("approval_flow_templates")
}

/// ‡∏Ç‡∏±‡πâ‡∏ô‡∏ï‡∏≠‡∏ô‡πÉ‡∏ô Template
model ApprovalFlowStep {
  id                Int      @id @default(autoincrement())
  templateId        Int      @map("template_id")
  level             Int      // 1, 2, 3...
  name              String?  @db.VarChar(100)
  approverType      String   @default("dept_manager") @map("approver_type") @db.VarChar(50)
  requiredApprovals Int      @default(1) @map("required_approvals")
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamptz

  template          ApprovalFlowTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
  @@map("approval_flow_steps")
}

/// ‡∏Å‡∏≤‡∏£‡∏ú‡∏π‡∏Å Project + JobType ‡∏Å‡∏±‡∏ö Template
/// ‡∏ñ‡πâ‡∏≤ jobTypeId = NULL ‡πÅ‡∏™‡∏î‡∏á‡∏ß‡πà‡∏≤‡πÉ‡∏ä‡πâ‡∏Å‡∏±‡∏ö‡∏ó‡∏∏‡∏Å JobType (Default)
model ProjectFlowAssignment {
  id                Int      @id @default(autoincrement())
  tenantId          Int      @map("tenant_id")
  projectId         Int      @map("project_id")
  jobTypeId         Int?     @map("job_type_id") // NULL = Default for all JobTypes
  templateId        Int      @map("template_id")
  overrideAutoAssign Boolean @default(false) @map("override_auto_assign")
  autoAssignType    String?  @map("auto_assign_type") @db.VarChar(50)
  autoAssignUserId  Int?     @map("auto_assign_user_id")
  isActive          Boolean  @default(true) @map("is_active")
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamptz

  tenant            Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  project           Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  jobType           JobType? @relation(fields: [jobTypeId], references: [id], onDelete: Cascade)
  template          ApprovalFlowTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  autoAssignUser    User?    @relation("AssignmentAutoAssign", fields: [autoAssignUserId], references: [id], onDelete: SetNull)
  approvers         ProjectFlowApprover[]

  @@unique([projectId, jobTypeId])
  @@index([projectId])
  @@index([jobTypeId])
  @@map("project_flow_assignments")
}

/// ‡∏£‡∏∞‡∏ö‡∏∏ Approver ‡πÄ‡∏â‡∏û‡∏≤‡∏∞ Project (Override Template Default)
model ProjectFlowApprover {
  id           Int      @id @default(autoincrement())
  assignmentId Int      @map("assignment_id")
  level        Int      // ‡∏ï‡∏£‡∏á‡∏Å‡∏±‡∏ö ApprovalFlowStep.level
  approverId   Int      @map("approver_id")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz

  assignment   ProjectFlowAssignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  approver     User     @relation("ProjectApprover", fields: [approverId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, level, approverId])
  @@index([assignmentId])
  @@map("project_flow_approvers")
}

model Approval {
  id            Int            @id @default(autoincrement())
  tenantId      Int            @map("tenant_id")
  jobId         Int            @map("job_id")
  stepNumber    Int            @map("step_number")
  approverId    Int            @map("approver_id")
  status        ApprovalStatus @default(pending)
  comment       String?        @db.Text
  approvedAt    DateTime?      @map("approved_at")
  approvalToken String?        @map("approval_token") @db.VarChar(64)
  ipAddress     String?        @map("ip_address") @db.VarChar(45) // IPv6 support
  userAgent     String?        @map("user_agent") @db.Text
  createdAt     DateTime       @default(now()) @map("created_at")

  tenant        Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  job           Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  approver      User      @relation(fields: [approverId], references: [id])

  @@map("approvals")
}

model JobActivity {
  id           Int      @id @default(autoincrement())
  tenantId     Int      @map("tenant_id")
  jobId        Int      @map("job_id")
  userId       Int?     @map("user_id")
  activityType String   @map("activity_type") @db.VarChar(50)
  description  String?  @db.Text
  metadata     Json?
  createdAt    DateTime @default(now()) @map("created_at")

  tenant       Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  job          Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user         User?     @relation(fields: [userId], references: [id])

  @@map("job_activities")
}

model JobComment {
  id        Int      @id @default(autoincrement())
  tenantId  Int      @map("tenant_id")
  jobId     Int      @map("job_id")
  userId    Int      @map("user_id")
  comment   String   @db.Text
  mentions  Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@map("job_comments")
}

model Notification {
  id        Int      @id @default(autoincrement())
  tenantId  Int      @map("tenant_id")
  userId    Int      @map("user_id")
  type      String   @db.VarChar(50)
  title     String   @db.VarChar(500)
  message   String?  @db.Text
  link      String?  @db.VarChar(500)
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  tenant    Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs      NotificationLog[]

  @@map("notifications")
}

